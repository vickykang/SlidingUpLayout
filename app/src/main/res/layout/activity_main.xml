<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#ffffff">

    <com.readboy.slidinguppanel.views.SlidingUpLayout
        android:id="@+id/sliding_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        app:gravity="center_horizontal">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_weight="1.0"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/overcast"
                android:gravity="center_horizontal" />

            </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingStart="10dp"
                android:paddingTop="5dp"
                android:paddingRight="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="5dp"
                android:background="#afa4e2c6">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="一生所爱"
                    android:textSize="14dp"
                    android:textColor="#002c3b" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="卢冠廷"
                    android:textSize="14dp" />

                </RelativeLayout>


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.0"
                android:paddingTop="10dp"
                android:background="#5fa4e2c6">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/love_in_life"
                    android:gravity="center_horizontal" />

            </ScrollView>

            </LinearLayout>

        </com.readboy.slidinguppanel.views.SlidingUpLayout>

</RelativeLayout>
