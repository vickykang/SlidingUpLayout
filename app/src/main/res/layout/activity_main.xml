<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#ffffff">

    <com.readboy.slidinguppanel.views.SlidingUpLayout
        android:id="@+id/sliding_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        app:gravity="center_horizontal"
        app:dragger="@drawable/selector_btn_common">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_weight="1.0"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/overcast"
                android:gravity="center_horizontal" />

        </ScrollView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:paddingTop="10dp"
            android:background="#2b3f3f3f">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/love_in_life"
                android:gravity="center_horizontal" />

            </ScrollView>

        </com.readboy.slidinguppanel.views.SlidingUpLayout>

</RelativeLayout>
